<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center">
			<h2><%= @question.inquiry %></h2>
			<%= simple_form_for @guess, url: player_recently_added_guesses_path do |f| %>
			<%= f.error_notification %>

			<%= f.association :answer, as: :radio_buttons, label_method: :answer %>			

			<%= f.button :submit, "Submit" %>
			<% end %>

		</div>
	</div>
</div>