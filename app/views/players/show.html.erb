<div class="container" id="profile_page">
	<div class="row">
		<div class="col-md-6" id="profile_box">
			<table>
				<p>Profile</p>
				<tr>
					<td> Xbox: </td>
					<td> <%= @gtags[:xbl] %> </td>
				</tr>
				<tr>
					<td> PSN: </td>
					<td> <%= @gtags[:psn] %> </td>
				</tr>
				<tr>
					<td>Tagline: </td>
					<td> <%= @player.tagline %> </td>
				</tr>
				<tr>
					<td> Points: </td>
					<td> <%= @player.points %> </td>
				</tr>
				<tr><td colspan="2"><%= button_to 'Recents', player_recently_addeds_path(current_player), class: "btn btn-lg btn-primary btn-block"%></td>
				</tr>
			</table>
		</div>
		<div class="col-md-4 col-md-offset-1" id="session_box">
			<h3>Choose a system and a game to start a session</h3>
			<%= form_tag(check_question_path, :id => 'session_form') %>
			<div class="row" id="select">
				<div class="col-md-6">
					Xbox One<%= radio_button_tag 'console', 'XB1' %>
				</div>
				<div class="col-md-6">
					Playstation 4<%= radio_button_tag 'console', 'PS4' %>
				</div>
			</div>
			<div class="row">
				<%= select_tag 'psgames', options_from_collection_for_select(@PS4, "id", 'name'), :include_blank => true, :class => "form-control" %>
				<%= select_tag 'xbgames', options_from_collection_for_select(@XB1, "id", 'name'), :include_blank => true, :class => "form-control" %>

				<%= submit_tag 'submit', :class => "btn btn-lg btn-primary btn-block" %>
			</div>
	</div>
</div>
