<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h2 class="form-signin-heading">Create your account</h2>
			<%= form_for(@player, :html => {:class => "form-signin"})  do |f| %>
				<%= f.label :email, :class => "sr-only" %>
				<%= f.text_field :email, :class => "form-control", :placeholder => "Enter email" %>

				<%= f.label :password, :class => "sr-only" %>
				<%= f.password_field :password, :class => "form-control", :placeholder => "Enter Password" %>

				<%= f.label "confirm password", :class => "sr-only" %>
				<%= f.password_field :nil, :class => "form-control", :placeholder => " Confirm Password" %>

				<%= f.submit "Submit", :class => "btn btn-lg btn-primary btn-block"  %>
			<% end  %>
		</div>
	</div>
</div>