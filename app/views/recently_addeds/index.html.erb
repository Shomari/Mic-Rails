<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<table class="table">
			<tr>
				<th>Gamertag</th>
				<th>Game</th>
				<th>Date</th>
				<th>Answer Question</th>
			</tr>			
			<%= @recents.each do |recent| %>
			<tr>
				<td><%= recent.friend.id %></td>
				<td>need to add game functionality</td>
				<td><%= recent.created_at %></td>
				<td><%= link_to 'Answer Question', guesses_path(guesser: "#{recent.player.id}", friend: "#{recent.friend.id}"), method: :get %></td>				
			</tr>
			<% end %>
		</table>
	</div>
</div>